<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        >

        <TextView
            android:id="@+id/home_screen_card_limit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Güncel Bakiye"
            android:textSize="10dp"
            android:textColor="#fff"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/debit_card_home_screen_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_screen_card_limit_text"
            android:layout_marginLeft="40dp"
            android:text="122.000,00 TL"
            android:textColor="#fff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/home_screen_total_card_limit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesap Numarası"
            android:layout_marginStart="40dp"
            android:textColor="#fff"
            android:layout_below="@id/debit_card_home_screen_balance"
            android:layout_marginTop="20dp"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/debit_card_home_screen_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_screen_total_card_limit_text"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:text="12345678"
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/home_screen_current_debt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esnek Hesap Limiti"
            android:layout_toRightOf="@id/home_screen_total_card_limit_text"
            android:layout_marginStart="40dp"
            android:textColor="#fff"
            android:layout_below="@id/debit_card_home_screen_balance"
            android:layout_marginTop="20dp"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/debit_card_home_screen_flexible_account_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_screen_total_card_limit_text"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:layout_toRightOf="@id/debit_card_home_screen_account_number"
            android:text="72.000,00 TL"
            android:textColor="#fff"
            android:textSize="15dp" />

    </RelativeLayout>
    
</RelativeLayout>