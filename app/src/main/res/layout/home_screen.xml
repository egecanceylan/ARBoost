<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#bb000000">

    <TextView
        android:id="@+id/home_screen_card_limit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KullanÄ±labilir Kart Limiti"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/home_screen_card_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="149.000,00 TL"
        android:layout_below="@id/home_screen_card_limit_text"
        android:textSize="35dp"
        android:textColor="#fff"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp" />
    
    <TextView
        android:id="@+id/home_screen_total_card_limit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toplam Kart Limiti"
        android:layout_marginStart="40dp"
        android:textColor="#fff"
        android:layout_below="@id/home_screen_card_limit"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/home_screen_total_card_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150.000,00 TL"
        android:layout_marginStart="40dp"
        android:textColor="#fff"
        android:layout_below="@id/home_screen_total_card_limit_text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>